<div id="index">

    <h1>List of Toys</h1>
    <%= link_to("New Toy", new_toy_path, class: "standard-button") %>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Posted</th>
                <th>User</th>
                <th>Manufacturer_ID</th>
                <th class="link-column"></th>
                <th class="link-column"></th>
                <th class="link-column"></th>
            </tr>
        </thead>
        <tbody>

            <% @toys.each do |toy| %>
                <tr>
                    <td class="center"><%= toy["id"] %></td>
                    <td><%= toy["name"] %></td>
                    <td class="center"><%= toy["posted"] %></td>
                    <td><%= toy.user.email %></td>
                    <td><%= toy.manufacturer.name %></td>
                    <td><%= link_to("Show", toy_path(toy["id"])) %></td>
                    <td><%= link_to("Edit", edit_toy_path(toy["id"])) %></td>
                    <td><%= link_to("Delete", toy_path(toy["id"]), method: :delete, data: { confirm: 'Are you sure?' }) %></td>
                </tr>
            <% end %>

        </tbody>

    </table>

</div>