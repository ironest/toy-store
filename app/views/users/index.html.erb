<div id="index">

    <h1>List of Users</h1>
    <%= link_to("New User", new_user_path, class: "standard-button") %>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Password</th>
                <th class="link-column"></th>
                <th class="link-column"></th>
                <th class="link-column"></th>
            </tr>
        </thead>
        <tbody>

            <% @users.each do |user| %>
                <tr>
                    <td class="center"><%= user["id"] %></td>
                    <td><%= user["email"] %></td>
                    <td class="center"><%= user["password"] %></td>
                    <td><%= link_to("Show", user_path(user["id"])) %></td>
                    <td><%= link_to("Edit", edit_user_path(user["id"])) %></td>
                    <td><%= link_to("Delete", user_path(user["id"]), method: :delete, data: { confirm: 'Are you sure?' }) %></td>
                </tr>
            <% end %>

        </tbody>

    </table>

</div>